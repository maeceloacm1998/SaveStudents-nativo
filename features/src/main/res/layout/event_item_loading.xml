<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/gray_scale_400"
    android:padding="10dp">

    <View
        android:id="@+id/ch_type"
        style="@style/CardView"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:background="@drawable/bg_circle_soft_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Evento" />

    <View
        android:id="@+id/bt_delete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/bg_circle_soft_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cl_event_information"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ch_type">

        <View
            android:id="@+id/vw_day_bg"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_circle_blue"
            app:layout_constraintEnd_toEndOf="@id/tv_month_text"
            app:layout_constraintStart_toStartOf="@id/tv_month_text"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tv_day_text"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_circle_soft_black"
            app:layout_constraintBottom_toBottomOf="@id/vw_day_bg"
            app:layout_constraintEnd_toEndOf="@id/vw_day_bg"
            app:layout_constraintStart_toStartOf="@id/vw_day_bg"
            app:layout_constraintTop_toTopOf="@id/vw_day_bg" />

        <View
            android:id="@+id/tv_month_text"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_circle_soft_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vw_day_bg"
            tools:text="maio" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_event_information"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@id/cl_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cl_date"
        app:layout_constraintTop_toTopOf="@id/cl_date">

        <View
            android:id="@+id/tv_event_title"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bg_circle_soft_black"
            app:layout_constraintEnd_toStartOf="@id/tv_hour"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tv_event_period"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_circle_soft_black"
            app:layout_constraintEnd_toStartOf="@id/tv_hour"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_event_title"
            tools:text="6 Periodo" />

        <View
            android:id="@+id/tv_hour"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_circle_soft_black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_event_period"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="16:00" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>