<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/soft_black"
    android:paddingHorizontal="23dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/saveicon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_user"
        style="@style/Theme.Ui.Text.Bold.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/icon"
        tools:text="OlÃ¡, teste" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_item_schedule"
        style="@style/Theme.Ui.Button.Text"
        android:layout_width="match_parent"
        android:layout_marginTop="35dp"
        android:gravity="start"
        android:text="@string/menu_item_schedule"
        app:icon="@drawable/ic_schedule"
        app:iconSize="20dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_user" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_item_notification"
        style="@style/Theme.Ui.Button.Text"
        android:layout_width="match_parent"
        android:gravity="start"
        android:text="@string/menu_item_notification"
        app:icon="@drawable/ic_notifications_24"
        app:iconSize="20dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_item_schedule" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/menu_item_config"
        style="@style/Theme.Ui.Button.Text"
        android:layout_width="match_parent"
        android:gravity="start"
        android:text="@string/menu_item_config"
        app:icon="@drawable/ic_config"
        app:iconSize="20dp"
        app:iconTint="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menu_item_notification" />

</androidx.constraintlayout.widget.ConstraintLayout>