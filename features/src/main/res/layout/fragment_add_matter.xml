<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/loading"
        layout="@layout/fragment_add_matter_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@+id/error"
        layout="@layout/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/submit_button"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <com.savestudents.components.textInput.TextInputCustomView
                android:id="@+id/matter_text_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginTop="20dp"
                android:hint="@string/hint_search_matter"
                app:helperText="@string/helper_search_matter"
                app:layoutType="autocomplete"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/matter_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/matter_text_input">

                <TextView
                    android:id="@+id/matter_name"
                    style="@style/Theme.Ui.Text.Bold.Big"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Grafos" />

                <TextView
                    android:id="@+id/period"
                    style="@style/Theme.Ui.Text.Bold.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="period: 6 periodo" />

                <TextView
                    android:id="@+id/teacher"
                    style="@style/Theme.Ui.Text.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="Professor: Antonio" />
            </LinearLayout>

            <TextView
                android:id="@+id/select_day_title"
                style="@style/Theme.Ui.Text.Bold.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/add_matter_select_days_title"
                app:layout_constraintTop_toBottomOf="@id/matter_information" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toBottomOf="@id/select_day_title"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip1"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_matter_chip_monday" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip2"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_matter_chip_tuesday" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip3"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_matter_chip_wednesday" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip4"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_matter_chip_thursday" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip5"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_matter_chip_friday" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip6"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_matter_chip_saturday" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/select_days_error"
                style="@style/Theme.Ui.Text.Error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="10dp"
                android:text="@string/add_matter_select_hour_title"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/chipGroup" />

            <TextView
                android:id="@+id/select_hour_title"
                style="@style/Theme.Ui.Text.Bold.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:text="@string/add_matter_select_hour_title"
                app:layout_constraintTop_toBottomOf="@id/select_days_error" />

            <com.savestudents.components.textInput.TextInputCustomView
                android:id="@+id/initial_hour_text_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                app:iconRight="@drawable/ic_clock"
                app:layout_constraintEnd_toStartOf="@id/final_hour_text_layout"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/select_hour_title"
                app:mask="##:##"
                tools:hint="@string/add_matter_initial_hour" />

            <com.savestudents.components.textInput.TextInputCustomView
                android:id="@+id/final_hour_text_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="24dp"
                app:iconRight="@drawable/ic_clock"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/initial_hour_text_layout"
                app:layout_constraintTop_toBottomOf="@id/select_hour_title"
                app:mask="##:##"
                tools:hint="@string/add_matter_final_hour" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_button"
        style="@style/Theme.Ui.Button"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginVertical="16dp"
        android:layout_marginBottom="24dp"
        android:text="@string/register_account"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container" />
</androidx.constraintlayout.widget.ConstraintLayout>


