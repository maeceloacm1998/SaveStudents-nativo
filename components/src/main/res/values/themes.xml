<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Ui.Button" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="Theme.Ui.Button.Text" parent="ThemeOverlay.Material3.Button">
        <item name="android:theme">@style/ThemeOverlay.Material3.Button.TextButton</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Theme.Ui.Appbar.TextAppearance" parent="Widget.Material3.Toolbar">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Ui.Text.Bold.Big" parent="">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.Ui.Text.Bold.Medium" parent="">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Theme.Ui.Text.Bold.Small" parent="">
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Ui.Text.Medium" parent="">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Theme.Ui.Text.Error" parent="">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/error_primary</item>
    </style>

    <style name="Theme.SaveStudentsV2" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="colorPrimary">@color/gray_scale_300</item></style>
</resources>